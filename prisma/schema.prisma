datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

model Menu {
  id        String     @id @default(cuid())
  title     String
  createdAt DateTime   @default(now())
  items     MenuItem[]
  orders    GroupOrder[]
}

model MenuItem {
  id        String   @id @default(cuid())
  menu      Menu     @relation(fields: [menuId], references: [id])
  menuId    String
  name      String
  priceGs   Int
  category  String?
  isActive  Boolean  @default(true)
}

model GroupOrder {
  id             String       @id @default(cuid())
  slug           String       @unique
  menu           Menu         @relation(fields: [menuId], references: [id])
  menuId         String
  deadlineTs     DateTime
  deliveryCostGs Int          @default(0)
  minTotalGs     Int?         // mÃ­nimo en Gs (opcional)
  minItems       Int?         // mÃ­nimo cantidad de Ã­tems (opcional)
  splitStrategy  SplitStrategy @default(EVEN)
  status         Status       @default(OPEN)
  adminPin       String
  createdAt      DateTime     @default(now())
  closedAt       DateTime?
  cancelReason  String?
  lines          OrderLine[]
   // ðŸ”½ Nuevos campos multi-empresa / bancarios ðŸ”½
  companyName     String
  companyWhatsapp String      // nÃºmero en formato internacional, solo dÃ­gitos, ej: 595971234567
  bankName        String
  bankHolder      String      // Titular
  bankAccount     String      // NÃºmero de cuenta o alias
  bankDoc         String      // RUC o CI
  bankAlias       String?
}

model OrderLine {
  id             String     @id @default(cuid())
  groupOrder     GroupOrder @relation(fields: [groupOrderId], references: [id])
  groupOrderId   String
  name           String
  whatsapp       String
  payMethod      PayMethod
  itemId         String
  itemName       String
  unitPriceGs    Int
  qty            Int
  note           String?
  subtotalGs     Int
  deliveryShareGs Int        @default(0)
  totalGs        Int         @default(0)
  status         LineStatus  @default(PENDING)
  createdAt      DateTime    @default(now())
}

enum SplitStrategy {
  EVEN
  WEIGHTED
}

enum Status {
  OPEN
  CLOSED
  DELIVERED
  CANCELLED
}

enum LineStatus {
  PENDING
  FINALIZED
  PAID
}

enum PayMethod {
  TC
  TD
  TRANSFER
  CASH
  QR
}
